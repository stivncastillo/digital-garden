---
interface Props {
  url: string;
  name: string;
}

const { url, name } = Astro.props;
---

<li class="relative group">
  <a href={url}>
    <div
      class="p-px bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-md transition-all duration-150 group-hover:-translate-x-1.5 group-hover:-translate-y-1.5 z-10"
    >
      <div
        class="flex flex-col rounded-md py-2 px-3 items-center dark:bg-slate-900 bg-white"
      >
        <span class="text-sm">{name}</span>
      </div>
    </div>
    <div
      class="absolute top-0 bottom-0 right-0 left-0 group-hover:border-slate-900 dark:group-hover:border-white border border-dashed rounded-md -z-10"
    >
    </div>
  </a>
</li>
