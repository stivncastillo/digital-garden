---
import type { NotesFrontMatter } from "../../types";
import type { MarkdownInstance } from "astro";
import HomeSection from "./components/HomeSection.astro";
import Note from "@components/Notes/Note.astro";

interface Props {
  notes: MarkdownInstance<NotesFrontMatter>[];
}

const { notes } = Astro.props;
const listNotes = notes.slice(0, 9);
---

<HomeSection
  title="Digital Garden"
  className="flex flex-col flex-1 space-y-1"
>
  <ul class="grid grid-cols-1 md:grid-cols-3 gap-2">
    {
      listNotes.map(({ url, frontmatter: { title } }) => (
        <Note url={url} title={title} slim />
        ))
      }
      <Note url="/digital-garden" title="See more..." slim />
  </ul>
</HomeSection>
